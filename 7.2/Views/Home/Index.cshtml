@{
    ViewBag.Title = "Home Page";
}

<!-- Header -->
<header class="w3-display-container w3-content w3-wide" style="max-width:1600px;min-width:500px" id="home">
    <img class="w3-image" src="~/img/header.jpg" alt="Hamburger Catering" width="1600" height="800">
    <div class="w3-display-bottomleft w3-padding-large w3-opacity">
        <h1 class="w3-xxlarge">Le Catering</h1>
    </div>
</header>

<!-- Page content -->
<div class="w3-content" style="max-width:1100px">
    @foreach (var item in Model)
    {
<!-- About Section -->
    <div class="w3-row w3-padding-64" id="about">
        <div class="w3-col m6 w3-padding-large w3-hide-small">
            <img src="~/img/@item.img" class="w3-round w3-image w3-opacity-min" alt="Table Setting" width="350" height="450">
        </div>
        <br /><br />
              <h5 class="w3-center"> @item.S_Name</h5>
        <p class="w3-large w3-text-grey w3-hide-medium">
       @item.descrip
        </p>
    </div>
    }
  
  
</div>
